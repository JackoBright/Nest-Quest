<html>

  <h1>Properties</h1>
  <h3>Add New Property :</h3>

  <!-- This area will display errors if the user doesn't add proper input-->
  <h4>{{insert_error}}</h4>

  <!-- Form to insert new Property -->
  <form
    id="addproperty"
    action="/properties"
    method="post"
    onkeydown="return event.key != 'Enter';"
  >
    Address:
    <input
      type="text"
      name="address"
      placeholder="Enter Property Address"
      required
    /><br />
    <br />
    
    Rooms:
    <input
      type="number"
      name="rooms"
      placeholder="Enter # of Rooms"
      required
    /><br />
    <br />

    Bathrooms:
    <input
      type="number"
      name="bathrooms"
      placeholder="Enter # of Bathrooms"
      required
    /><br />
    <br />

    Sqft:
    <input
      type="number"
      name="sqft"
      placeholder="Enter Size in Square Feet"
      required
    /><br />
    <br />

    Rent:
    <input
      type="number"
      name="rent"
      placeholder="Enter Rent"
      required
    /><br />
    <br />

    Utilities:
    <input
      type="text"
      name="utilities"
      placeholder="Enter Utilities"
      required
    /><br />
    <br />

    Description:
    <input
      type="text"
      name="description"
      placeholder="Enter Description"
    /><br />
    <br />
    <input type="submit" value="Submit" />
  </form>


  {{!-- Displays Current Property Entity Table  --}}
  <h3>Current Properties:</h3>
  <table>
    <thead>
        <th>Address</th>
        <th>Rooms</th>
        <th>Bathrooms</th>
        <th>Sqft</th>
        <th>Rent</th>
        <th>Utilities</th>
        <th>Description</th>
    </thead>
    
    {{!-- Displays a row for each property in the db.  --}}
    <tbody>
      {{#each property}}
        <tr id = "{{address}}">
          <td>{{address}}</td>
          <td>{{rooms}}</td>
          <td>{{bathrooms}}</td>
          <td>{{sqft}}</td>
          <td>{{rent}}</td>
          <td>{{utilities}}</td>
          <td>{{description}}</td>

          {{!-- Delete and Update Buttons. 
                Delete uses the functions defined in delete.js
                Update takes the user to  --}}
                
          <td><form action = "/properties/delete/{{address}}" method = "post">
          <button>Delete</button></form></td>
          <td><button onclick = 'update("{{address}}")'>Update</button></td>
        </tr>
      {{/each}}
    {{!-- Displays a row for each property in the db.  --}}

    </tbody>
  </table>
  <div class = "modal hidden">
    <h3>Update Properties: </h3>
    <button class = "close-modal" onclick="closeModal()">Close</button>
  </div>

  <script>
    function update(address){
            var text;
            
            let row = document.getElementById(address);
            var form = document.getElementById("addproperty");
            var updateform = form.cloneNode(true);
            var html = document.getElementsByTagName("html");

            var compensation = 0;
            for(let i = 0; i < 8; i++){
              var text = row.childNodes[2*i+3].textContent;
              updateform.childNodes[5*i+1+compensation].value = text;
            }
            
            console.log(row.childNodes);
            console.log(updateform.childNodes);
            updateform.action = '/properties/update/' + address;

            var modal = document.getElementsByClassName("modal");
            modal[0].getElementsByTagName("h3")[0].textContent = "Update Properties: " + address;
            modal[0].appendChild(updateform);
            modal[0].classList.remove("hidden");
            console.log(modal[0]);

            
          }
    function closeModal(){
      var modal = document.getElementsByClassName("modal");
      modal[0].classList.add("hidden");
      console.log(modal[0].children);
      //Need to remove the 2nd and 3rd nodes to clear the form
      
    }
  </script>
</html>
